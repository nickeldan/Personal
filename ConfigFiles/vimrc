set tabstop=4
set shiftwidth=4
set expandtab
set smarttab
set autoindent

set hlsearch
syntax enable

set scrolloff=5
set wrap

set number
set relativenumber

set noerrorbells

set title
set cursorline
set ruler
set cc=110

nnoremap <C-b> :%!black -l 110 - 2> /dev/null<CR>
nnoremap <C-c> :%!clang-format - 2> /dev/null<CR>
